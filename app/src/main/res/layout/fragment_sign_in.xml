<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.login.signin.SignInFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/actionBar"
            android:background="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:liftOnScroll="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:padding="@dimen/margin_horizontal_default_16dp"
                    android:id="@+id/back"
                    android:layout_gravity="start|center_vertical"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_horizontal_sign_in_caption"
                android:layout_marginEnd="@dimen/margin_horizontal_sign_in_caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SignInCaptionTextStyle"
                    android:layout_marginTop="@dimen/margin_top_sign_in_caption"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sign_in_title_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SignInBlueCaptionTextStyle"
                    android:text="@string/sign_in_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/bg_login_input_state"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:id="@+id/loginInputLayout"
                    android:layout_marginTop="@dimen/margin_top_sign_in_inputs"
                    android:hint="@string/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:paddingTop="@dimen/padding_top_sign_in_edit_text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:id="@+id/login"
                        android:textSize="@dimen/text_size_16_sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:background="@drawable/bg_login_input_state"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:id="@+id/keyInputLayout"
                    android:layout_marginTop="@dimen/margin_top_sign_in_key"
                    android:hint="@string/key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:paddingTop="@dimen/padding_top_sign_in_edit_text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:id="@+id/key"
                        android:textSize="@dimen/text_size_16_sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:enabled="false"
                    android:id="@+id/signIn"
                    style="@style/SignUpButtonStyle"
                    android:layout_marginTop="@dimen/margin_top_sign_in_button"
                    android:layout_marginBottom="@dimen/margin_top_sign_in_button"
                    android:text="@string/sign_in"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
