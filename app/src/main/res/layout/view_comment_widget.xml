<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/root"

    android:background="@drawable/bcg_editor_toolbar"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/userAvatar"

        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/comment"

        app:layout_constraintStart_toStartOf="parent"

        app:srcCompat="@drawable/ic_empty_user"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/comment"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bcg_post_card_comment"
        android:focusable="true"

        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="@string/hint_add_comment"

        android:inputType="none"

        android:maxLines="5"

        android:imeOptions="normal"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_goneMarginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:maxLength="500"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendButton"
        app:layout_constraintStart_toEndOf="@+id/userAvatar"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="" />

    <ImageButton
        android:id="@+id/sendButton"

        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginEnd="15dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="@+id/comment"

        app:layout_constraintEnd_toEndOf="parent"

        app:srcCompat="@drawable/ic_upvote"
        android:tint="@color/white"
        android:background="@drawable/bcg_blue_round_corners_button"

        tools:ignore="ContentDescription"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>