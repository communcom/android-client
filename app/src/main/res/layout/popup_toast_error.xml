<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:background="@drawable/bcg_toast_message"
        android:alpha="0.9"
        android:padding="10dp"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/toast_icon_size"
            android:layout_height="@dimen/toast_icon_size"

            android:layout_gravity="center_vertical"

            android:src="@drawable/ic_settings_blacklist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"

                android:textColor="?attr/white"
                android:textSize="15sp"
                android:textStyle="bold"

                android:text="@string/something_wrong"
                android:layout_gravity="center_vertical"
            />

            <TextView
                android:id="@+id/messageText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"

                android:textColor="?attr/light_gray"
                android:textSize="12sp"

                tools:text = "Not that Belladonna Took ever had any adventures after she became Mrs. Bungo Baggins."
                android:layout_gravity="center_vertical"
            />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

