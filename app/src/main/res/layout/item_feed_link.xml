<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/feedLinkImage"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <TextView
            android:id="@+id/feedLinkDescription"
            style="@style/Post.Image.Description.TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            tools:text="Exercitation ex nulla ullamco aliquip culpa" />

        <TextView
            android:id="@+id/feedLinkUrl"
            style="@style/Post.Image.Link.TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            tools:text="Donware.com" />

    </LinearLayout>

</LinearLayout>