<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/actionBar"
            android:background="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
                app:layout_scrollFlags="scroll|enterAlways"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                    android:id="@+id/back"
                    android:padding="@dimen/padding_toolbar_buttons_20dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_gravity="start|center_vertical"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/toolbarTitle"
                    style="@style/ToolbarTitleTextStyle"
                    android:text="@string/settings"
                    android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                    android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/settings"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/general"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    style="@style/SettingsSectionTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/languageButton"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/margin_top_settings_language"
                    android:paddingTop="@dimen/margin_vertical_default_8dp"
                    android:paddingBottom="@dimen/margin_vertical_default_8dp"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/interface_language"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/language"
                        tools:text="English"
                        style="@style/SettingsSelectedOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/nsfwButton"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginBottom="@dimen/margin_top_settings_language"
                    android:paddingTop="@dimen/margin_vertical_default_8dp"
                    android:paddingBottom="@dimen/margin_vertical_default_8dp"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/nsfwTitle"
                        android:text="@string/nsfw_content"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/nsfw"
                        tools:text="@string/always_alert"
                        style="@style/SettingsSelectedOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                          android:orientation="horizontal"
                          android:layout_marginBottom="@dimen/margin_vertical_default_16dp"
                          android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                          android:gravity="center_vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView
                        android:text="@string/push_notifications"
                        android:paddingStart="@dimen/margin_horizontal_default_16dp"
                        android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/pushNotifsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="@color/middle_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <TextView
                    android:text="@string/notifications"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    style="@style/SettingsSectionTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/margin_vertical_default_16dp"
                    android:overScrollMode="never"
                    android:id="@+id/notificationSettingsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:visibility="gone"
                    android:background="@color/middle_gray"
                    android:layout_marginTop="@dimen/margin_vertical_default_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <TextView
                    android:visibility="gone"
                    android:text="@string/passwords"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    style="@style/SettingsSectionTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/postingPassTitle"
                        android:text="@string/posting_password"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        style="@style/SettingsSelectedOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageButton
                        app:srcCompat="@drawable/ic_copy"
                        android:id="@+id/postingPassCopy"
                        android:padding="@dimen/margin_horizontal_default_16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/postingPass"
                        android:layout_below="@+id/postingPassTitle"
                        android:layout_toStartOf="@+id/postingPassCopy"
                        tools:text="0xDdbA127De3D6D93C25268817615d64990552720xDdbA127De3D6D93C25268817"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_vertical_default_16dp"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/activePassTitle"
                        android:text="@string/active_password"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        style="@style/SettingsSelectedOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageButton
                        app:srcCompat="@drawable/ic_copy"
                        android:id="@+id/activePassCopy"
                        android:padding="@dimen/margin_horizontal_default_16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/activePass"
                        android:layout_below="@+id/activePassTitle"
                        android:layout_toStartOf="@+id/activePassCopy"
                        tools:text="0xDdbA127De3D6D93C25268817615d64990552720xDdbA127De3D6D93C25268817"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/ownerPassTitle"
                        android:text="@string/owner_password"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        style="@style/SettingsSelectedOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageButton
                        app:srcCompat="@drawable/ic_copy"
                        android:id="@+id/ownerPassCopy"
                        android:padding="@dimen/margin_horizontal_default_16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/ownerPass"
                        android:layout_below="@+id/ownerPassTitle"
                        android:layout_toStartOf="@+id/ownerPassCopy"
                        tools:text="0xDdbA127De3D6D93C25268817615d64990552720xDdbA127De3D6D93C25268817"
                        style="@style/SettingsOptionTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                    android:visibility="gone"
                    android:id="@+id/editBio"
                    android:text="@string/change_all_passwords"
                    style="@style/ChangeAllPasswordsTextStyle"
                    android:gravity="center"
                    android:padding="@dimen/padding_profile_edit_bio_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_bio_button"
                    android:layout_marginTop="@dimen/margin_top_settings_general"
                    android:layout_marginBottom="@dimen/margin_vertical_default_16dp"
                    android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                    android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                    />

            <TextView
                    android:id="@+id/exportKeys"
                    android:text="@string/export_keys"
                    style="@style/SettingsBlackTextStyle"
                    android:gravity="start"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:paddingTop="@dimen/margin_vertical_default_16dp"
                    android:paddingBottom="@dimen/margin_vertical_default_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <TextView
                    android:id="@+id/logOut"
                    android:text="@string/log_out"
                    style="@style/SettingsLogoutTextStyle"
                    android:gravity="start"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="@dimen/margin_horizontal_default_16dp"
                    android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                    android:paddingTop="@dimen/margin_vertical_default_16dp"
                    android:paddingBottom="@dimen/margin_vertical_default_16dp"
                    android:layout_marginBottom="@dimen/margin_vertical_default_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
