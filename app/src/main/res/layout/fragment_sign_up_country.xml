<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.screens.login_sign_up.fragments.country.SignUpCountryFragment">

    <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/actionBar"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
                app:layout_scrollFlags="scroll|enterAlways"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:id="@+id/ivBack"
                    android:padding="@dimen/padding_toolbar_buttons_20dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_gravity="start|center_vertical"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/toolbarTitle"
                    android:text="@string/select_country"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:theme="@style/ToolbarTitleTextStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <include
                android:layout_marginTop="@dimen/margin_feed_search_bar"
                android:layout_marginStart="@dimen/margin_feed_search_bar"
                android:layout_marginEnd="@dimen/margin_feed_search_bar"
                android:layout_marginBottom="@dimen/margin_feed_search_bar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/view_search_bar"/>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/countriesList"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingTop="@dimen/margin_default"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>