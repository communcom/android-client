<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.screens.login_sign_up.fragments.country.SignUpCountryFragment">

    <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/actionBar"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/white_header_height"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/select_country"

                style="@style/White.Header.TextStyle"

                android:layout_gravity="center" />

            <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                android:id="@+id/ivBack"

                android:layout_width="@dimen/size_image_button"
                android:layout_height="@dimen/size_image_button"

                app:imageButton_icon="@drawable/ic_left_arrow"
                app:imageButton_iconInscribeSize="@dimen/profile_back_button_icon_size"
                app:imageButton_tint="@color/black"
                android:background="@null"

                android:layout_gravity="center_vertical|start"

                tools:visibility="visible"
                />
        </FrameLayout>

        <include
                android:layout_marginTop="@dimen/margin_feed_search_bar"
                android:layout_marginStart="@dimen/margin_feed_search_bar"
                android:layout_marginEnd="@dimen/margin_feed_search_bar"
                android:layout_marginBottom="@dimen/margin_feed_search_bar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/view_search_bar"
                android:visibility="gone"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/countriesList"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingTop="@dimen/margin_default"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>