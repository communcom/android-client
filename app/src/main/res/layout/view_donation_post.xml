<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/amountLabel"
        style="@style/Text13.Blue.Bold.SingleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/pointsLabel"

        app:layout_constraintEnd_toEndOf="@+id/pointsLabel"

        app:layout_constraintStart_toStartOf="@+id/pointsLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="400" />

    <TextView
        android:id="@+id/pointsLabel"
        style="@style/Text12.Blue.Bold.SingleLine"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/margin_tiny"
        android:text="@string/donate_points_popup"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plusLabel"
        app:layout_constraintTop_toBottomOf="@+id/amountLabel" />

    <TextView
        android:id="@+id/plusLabel"
        style="@style/Text13.Blue.Bold.SingleLine"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>