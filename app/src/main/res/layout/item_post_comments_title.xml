<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/post_comments_title_height"

    android:layout_marginTop="@dimen/post_comments_title_top_margin"
    android:layout_marginBottom="@dimen/post_comments_title_top_margin">

    <TextView
        android:id="@+id/commentsTitle"
        style="@style/PostTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/post_content_border_horizontal"
        android:paddingEnd="@dimen/post_content_border_horizontal"
        android:text="@string/post_comments_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/commentsSortMenuIcon"
        android:layout_width="@dimen/post_comments_title_menu_icon_width"
        android:layout_height="@dimen/post_comments_title_menu_icon_height"
        android:layout_marginEnd="@dimen/post_content_border_horizontal"
        android:tint="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drop_down"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>