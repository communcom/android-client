<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/root"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.golos.cyber_android.ui.screens.login_activity.signin.qr_code.QrCodeSignInFragment">

    <TextView
            android:id="@+id/stubText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sign_in_scan_qr_no_permissions"

            android:visibility="gone"
            tools:visibility="visible"

            style="@style/StandardText16spStyle"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
            android:id="@+id/loadingIndicator"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="?android:attr/progressBarStyle"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <SurfaceView
            android:id="@+id/cameraView"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_margin="@dimen/margin_sign_in_qr_code"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/hintText"/>

    <TextView
            android:id="@+id/hintText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sign_in_scan_qr_hint"
            style="@style/StandardText16spStyle"

            android:layout_marginBottom="@dimen/margin_sign_in_qr_code"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/cameraGroup"

        android:visibility="gone"
        tools:visibility="visible"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="hintText,cameraView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
