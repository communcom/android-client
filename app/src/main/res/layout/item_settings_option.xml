<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:id="@+id/root"
              android:background="?attr/selectableItemBackground"
              android:paddingTop="@dimen/margin_vertical_default_16dp"
              android:paddingBottom="@dimen/margin_vertical_default_16dp"
              android:paddingStart="@dimen/margin_horizontal_default_16dp"
              android:paddingEnd="@dimen/padding_sign_up_end_country"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/option"
            android:paddingStart="@dimen/margin_horizontal_default_16dp"
            android:paddingEnd="@dimen/margin_horizontal_default_16dp"
            android:layout_gravity="center_vertical"
            tools:text="Russia (+7)"
            android:theme="@style/PostCardCommunityTextStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/check"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>