<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_community_list_item">

    <ImageView
            android:id="@+id/logoImage"

            android:layout_width="@dimen/size_icon_community"
            android:layout_height="@dimen/size_icon_community"

            app:srcCompat="@drawable/img_example_flag"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:text=""
            tools:text = "Title"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/titleText"
            style="@style/CommunityListItemTitleText"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/followersText"
            app:layout_constraintStart_toEndOf="@+id/logoImage"
            app:layout_constraintEnd_toStartOf="@+id/joinButton"

            android:layout_marginEnd="@dimen/margin_horizontal_default_8dp"
            android:layout_marginStart="@dimen/margin_horizontal_default_8dp"

            app:layout_constraintVertical_chainStyle="packed"

            android:layout_marginBottom="@dimen/gap_4dp"/>
    <TextView
            android:text=""
            tools:text = "52k followers"

            style="@style/CommunityListItemFollowersText"
            android:ellipsize="end"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/followersText"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            app:layout_constraintStart_toEndOf="@+id/logoImage"
            app:layout_constraintEnd_toStartOf="@+id/joinButton"

            android:layout_marginEnd="@dimen/margin_horizontal_default_8dp"
            android:layout_marginStart="@dimen/margin_horizontal_default_8dp"

            android:layout_marginTop="@dimen/gap_4dp"/>

    <Button
            android:id="@+id/joinButton"

            android:text="@string/join_to_community"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_community_join_button"

            style="@style/CommunityJoinButtonText"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>