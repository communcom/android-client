<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/margin_bottom_post_page_content_row"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/image"
            android:orientation="vertical"
            android:adjustViewBounds="true"
            tools:src="@drawable/img_example_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical_default_16dp"
            android:layout_marginBottom="@dimen/margin_vertical_default_16dp"
            android:indeterminateOnly="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

</LinearLayout>