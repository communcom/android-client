<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="io.golos.cyber_android.ui.screens.login_sign_in_username.view_model.SignInUserNameViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="io.golos.cyber_android.ui.screens.login_sign_in_username.view.SignInUserNameFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:background="@color/white"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:liftOnScroll="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/margin_default"
                    app:srcCompat="@drawable/ic_left_arrow"
                    tools:ignore="ContentDescription"
                    android:onClick="@{() -> viewModel.onBackButtonClick()}"
                    />
            </FrameLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_top_sign_in_caption"
                android:layout_marginEnd="@dimen/margin_default"

                android:text="@string/welcome"

                style="@style/SignInCaptionTextStyle"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sign_up_field_height"

                android:layout_marginTop="@dimen/dimen_48"

                style="@style/SignIn.InputField"

                android:hint="@string/login"
                android:maxLength="@{viewModel.maxUserNameLen}"

                android:text="@={viewModel.userName}"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sign_up_field_height"

                android:layout_marginTop="@dimen/margin_default"

                style="@style/SignIn.InputField"

                android:hint="@string/key"
                android:maxLength="@{viewModel.maxPasswordLen}"

                android:text="@={viewModel.password}"
                />

            <TextView
                android:id="@+id/pastePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_12"

                style="@style/SignIn.Query.Link"
                android:singleLine="true"
                android:ellipsize="end"

                tools:text="Paste fdfkldlkfladkfdjlatierklfjdkflkalklflkflkalkfldlfalflkdkdflkdfkajlkfjdlkflajdakldf"
                android:text="@{viewModel.pastePasswordText}"

                android:layout_marginStart="@dimen/dimen_42"
                android:layout_marginEnd="@dimen/dimen_42"

                android:layout_gravity="center_horizontal"

                android:onClick="@{() -> viewModel.onPastePasswordClick()}"

                android:visibility="@{viewModel.pastePasswordVisibility}"
                tools:visibility="visible"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/dimen_42"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginEnd="@dimen/dimen_42">

                <TextView
                    android:id="@+id/signIn"
                    style="@style/SignUpButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_56"

                    tools:enabled="true"
                    android:enabled="@{viewModel.signInButtonEnabled}"

                    android:text="@string/sign_in"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/qrCode"

                    android:layout_marginEnd="@dimen/dimen_4"

                    android:onClick="@{() -> viewModel.onSignInClick()}"
                />

                <Button
                    android:id="@+id/qrCode"

                    android:layout_width="@dimen/dimen_56"
                    android:layout_height="@dimen/dimen_56"

                    android:background="@drawable/bg_sign_up_button"
                    android:drawableStart="@drawable/ic_qr_code"

                    android:paddingStart="18dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription,RtlSymmetry"

                    android:onClick="@{() -> viewModel.onQrCodeClick()}"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_24"

                style="@style/SignIn.Query.Link"

                android:text="@string/account_query"

                android:layout_gravity="center_horizontal"

                android:onClick="@{() -> viewModel.onMoveToSignUpClick()}"
                />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>