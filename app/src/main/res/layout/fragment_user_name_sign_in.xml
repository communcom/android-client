<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingStart="@dimen/margin_horizontal_default_16dp"
    android:paddingEnd="@dimen/margin_horizontal_default_16dp"

    tools:context="io.golos.cyber_android.ui.screens.login_activity.signin.user_name.UserNameSignInFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginInputLayout"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_login_input_state"

        android:paddingStart="@dimen/margin_horizontal_default_16dp"
        android:paddingEnd="@dimen/margin_horizontal_default_16dp"
        android:layout_marginTop="@dimen/margin_top_sign_in_login"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="@string/login">

        <EditText
            android:id="@+id/login"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text = "Login"

            android:inputType="text"

            android:paddingTop="@dimen/padding_top_sign_in_edit_text"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:textSize="@dimen/text_size_16_sp"
            tools:ignore="Autofill,LabelFor"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/keyInputLayout"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_input_state"
            android:paddingStart="@dimen/margin_horizontal_default_16dp"
            android:paddingEnd="@dimen/margin_horizontal_default_16dp"
            android:layout_marginTop="@dimen/margin_vertical_default_16dp"
            android:layout_marginEnd="@dimen/margin_horizontal_default_8dp"

            app:layout_constraintTop_toBottomOf="@id/loginInputLayout"
            app:layout_constraintStart_toStartOf="parent"

            android:hint="@string/key"
            app:layout_constraintEnd_toStartOf="@+id/restoreFromCloudButton">

        <EditText
                android:paddingTop="@dimen/padding_top_sign_in_edit_text"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/key"
                android:inputType="text"
                android:textSize="@dimen/text_size_16_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill,LabelFor"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/signIn"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:enabled="false"
        style="@style/SignUpButtonStyle"
        android:layout_marginTop="@dimen/margin_top_sign_in_button"
        android:text="@string/sign_in"
        android:layout_gravity="center_horizontal"

        app:layout_constraintTop_toBottomOf="@id/keyInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
            android:id="@+id/restoreFromCloudButton"

            android:layout_width="@dimen/size_image_button"
            android:layout_height="@dimen/size_image_button"

            android:background="@null"

            app:imageButton_tint="@color/tint_login_screen_button"
            app:imageButton_icon="@drawable/ic_cloud_download"
            app:imageButton_iconInscribeSize="@dimen/size_image_button_icon"

            app:layout_constraintTop_toTopOf="@+id/keyInputLayout"
            app:layout_constraintBottom_toBottomOf="@+id/keyInputLayout"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>