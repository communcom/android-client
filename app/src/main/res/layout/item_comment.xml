<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/commentRoot"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/commentAvatar"
            android:layout_width="@dimen/size_post_card_avatar"
            android:layout_height="@dimen/size_post_card_avatar"
            app:srcCompat="@drawable/img_example_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
            android:layout_marginTop="@dimen/margin_horizontal_default_16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/commentAuthorName"
            android:theme="@style/CommentAuthorTextStyle"
            tools:text="Andrey Ivanov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/commentAvatar"
            android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
            app:layout_constraintTop_toTopOf="@+id/commentAvatar"/>

    <TextView
            android:id="@+id/commentDate"
            android:theme="@style/PostCardAuthorTextStyle"
            tools:text="4 hr ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/commentAuthorName"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/commentAuthorName"
            app:layout_constraintBottom_toBottomOf="@+id/commentAuthorName"/>

    <TextView
            android:id="@+id/commentContent"
            android:theme="@style/CommentContentTextStyle"
            tools:text="welcome! ðŸ˜„Wow would love to wake up to this every morning. would instantly take my anxiety away."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/commentAuthorName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
            app:layout_constraintTop_toBottomOf="@+id/commentAuthorName"/>

    <ImageButton
            android:id="@+id/commentUpvote"
            android:layout_marginTop="@dimen/margin_top_comment_vote_buttons"
            android:layout_width="@dimen/size_post_card_comment_buttons"
            android:layout_height="@dimen/size_post_card_comment_buttons"
            android:background="@drawable/bg_post_card_upvote_button"
            app:srcCompat="@drawable/ic_upvote"
            android:tint="@color/tint_upvote_button"
            app:layout_constraintStart_toStartOf="@+id/commentContent"
            app:layout_constraintTop_toBottomOf="@+id/commentContent"
            android:layout_marginBottom="@dimen/margin_bottom_post_card_comment"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
            android:id="@+id/commentUpvoteProgress"
            android:indeterminateOnly="true"
            android:visibility="gone"
            android:layout_width="@dimen/size_post_card_comment_buttons"
            android:layout_height="@dimen/size_post_card_comment_buttons"
            android:background="@drawable/bg_post_card_upvote_button"
            app:layout_constraintStart_toStartOf="@+id/commentUpvote"
            app:layout_constraintTop_toTopOf="@+id/commentUpvote"
            android:layout_marginBottom="@dimen/margin_bottom_post_card_comment"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/commentRating"
            android:theme="@style/CommentRatingTextStyle"
            android:layout_marginStart="@dimen/margin_horizontal_post_card_downvote"
            tools:text="32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/commentUpvote"
            app:layout_constraintTop_toTopOf="@+id/commentUpvote"
            app:layout_constraintBottom_toBottomOf="@+id/commentUpvote"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/commentDownvote"
            android:layout_width="@dimen/size_post_card_comment_buttons"
            android:layout_height="@dimen/size_post_card_comment_buttons"
            android:background="@drawable/bg_post_card_downvote_button"
            android:tint="@color/tint_upvote_button"
            app:srcCompat="@drawable/ic_downvote"
            app:layout_constraintStart_toEndOf="@+id/commentRating"
            android:layout_marginStart="@dimen/margin_horizontal_post_card_downvote"
            app:layout_constraintTop_toTopOf="@+id/commentUpvote"
            app:layout_constraintBottom_toBottomOf="@+id/commentUpvote"/>

    <ProgressBar
            android:id="@+id/commentDownvoteProgress"
            android:indeterminateOnly="true"
            android:visibility="gone"
            android:layout_width="@dimen/size_post_card_comment_buttons"
            android:layout_height="@dimen/size_post_card_comment_buttons"
            android:background="@drawable/bg_post_card_downvote_button"
            app:layout_constraintStart_toEndOf="@+id/commentRating"
            android:layout_marginStart="@dimen/margin_horizontal_post_card_downvote"
            app:layout_constraintTop_toTopOf="@+id/commentUpvote"
            app:layout_constraintBottom_toBottomOf="@+id/commentUpvote"/>

    <TextView
            android:id="@+id/commentReply"
            android:theme="@style/CommentReplyTextStyle"
            android:paddingStart="@dimen/margin_vertical_comment_reply"
            android:paddingEnd="@dimen/margin_vertical_comment_reply"
            android:text="@string/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/commentDownvote"
            app:layout_constraintTop_toTopOf="@+id/commentUpvote"
            app:layout_constraintBottom_toBottomOf="@+id/commentUpvote"/>

</androidx.constraintlayout.widget.ConstraintLayout>