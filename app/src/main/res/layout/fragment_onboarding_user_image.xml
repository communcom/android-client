<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.login_activity.signup.fragments.onboardingImage.OnboardingUserImageFragment">

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/SignInCaptionTextStyle"
            android:layout_marginTop="@dimen/margin_top_sign_up_image_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:text="@string/pick_a_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <ImageView
            android:id="@+id/image"
            app:srcCompat="@drawable/ic_sign_up_camera"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding_sign_up_image"
            android:background="@drawable/bg_post_card_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:layout_weight="58"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/next"
            style="@style/SignUpButtonStyle"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_bottom_sign_up_image_button"
            android:layout_marginTop="@dimen/margin_top_welcome_buttons"
            android:layout_marginStart="@dimen/margin_horizontal_welcome_sign_up"
            android:layout_marginEnd="@dimen/margin_horizontal_welcome_sign_up"
            android:text="@string/next"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/skip"
            style="@style/SignInButtonStyle"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/margin_bottom_sign_up_image_button"
            android:layout_marginStart="@dimen/margin_horizontal_welcome_sign_up"
            android:layout_marginEnd="@dimen/margin_horizontal_welcome_sign_up"
            android:text="@string/skip"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
