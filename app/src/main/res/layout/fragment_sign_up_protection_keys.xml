<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.login.signup.keys.SignUpProtectionKeysFragment" android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/actionBar"
            android:background="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
                app:layout_scrollFlags="scroll|enterAlways"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:id="@+id/back"
                    android:padding="@dimen/padding_toolbar_buttons_20dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_gravity="start|center_vertical"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/toolbarTitle"
                    android:text="@string/passcode"
                    android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                    android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                    style="@style/ToolbarTitleTextStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/keysList"
            android:paddingBottom="@dimen/margin_vertical_default_16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/backup"
            style="@style/SignUpButtonStyle"
            android:layout_marginTop="@dimen/margin_top_welcome_buttons"
            android:layout_marginStart="@dimen/margin_horizontal_welcome_sign_up"
            android:layout_marginEnd="@dimen/margin_horizontal_welcome_sign_up"
            android:text="@string/backup"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/later"
            style="@style/SignInButtonStyle"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="@dimen/margin_horizontal_welcome_sign_up"
            android:layout_marginEnd="@dimen/margin_horizontal_welcome_sign_up"
            android:text="@string/later"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>