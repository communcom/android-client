<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogTextAndLinkRoot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:background="@drawable/bg_login_input_state"
        android:paddingStart="@dimen/margin_horizontal_default_16dp"
        android:paddingEnd="@dimen/margin_horizontal_default_16dp"

        android:id="@+id/textInputLayout"

        android:hint="@string/link_text"

        android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="@dimen/padding_top_sign_in_edit_text"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:inputType="textNoSuggestions"

            android:id="@+id/textField"

            android:layout_gravity="bottom"

            android:textSize="@dimen/text_size_16_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:background="@drawable/bg_login_input_state"
        android:paddingStart="@dimen/margin_horizontal_default_16dp"
        android:paddingEnd="@dimen/margin_horizontal_default_16dp"

        android:id="@+id/linkInputLayout"

        android:layout_marginTop="@dimen/margin_top_sign_up_inputs"
        android:hint="@string/link"

        android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="@dimen/padding_top_sign_in_edit_text"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:inputType="textNoSuggestions"

            android:id="@+id/linkField"

            android:layout_gravity="bottom"

            android:textSize="@dimen/text_size_16_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>