<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="io.golos.cyber_android.ui.screens.login_sign_up_create_password.view_model.SignUpCreatePasswordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.golos.cyber_android.ui.screens.login_shared.HeaderWidget
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/white_header_height"
            app:title = "@string/create_password"
        />

        <io.golos.cyber_android.ui.screens.login_sign_up_create_password.view.PasswordFieldWidget
            android:id="@+id/password"

            style="@style/SignIn.InputField"

            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_field_height"

            android:layout_marginStart="43dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="43dp"

            android:drawablePadding="10dp"

            android:gravity="center_vertical"
            android:hint="@string/enter_your_password"

        />

        <io.golos.cyber_android.ui.screens.login_sign_up_create_password.view.PasswordValidationWidget
            android:id="@+id/validationCases"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
        />

        <TextView
            android:id="@+id/next"
            style="@style/SignUpButtonStyle"
            android:enabled="false"
            android:text="@string/next"

            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"

            android:layout_marginTop="40dp"

            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>