<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.screens.editor.EditorPageFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        <com.google.android.material.appbar.AppBarLayout
                app:elevation="0dp"
                android:id="@+id/actionBar"
                android:background="@color/white"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/close"
                        android:padding="@dimen/padding_toolbar_buttons_20dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_gravity="start|center_vertical"
                        app:srcCompat="@drawable/ic_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/toolbarTitle"
                        android:text="@string/create_post"
                        android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                        android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                        android:theme="@style/ToolbarTitleTextStyle"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <ImageButton
                        android:id="@+id/post"
                        android:padding="@dimen/padding_toolbar_buttons_20dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_gravity="start|center_vertical"
                        app:srcCompat="@drawable/ic_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_marginTop="@dimen/margin_top_editor_page_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/communityAvatar"
                            android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                            android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                            android:layout_marginTop="@dimen/margin_vertical_editor_page_community_avatar"
                            android:layout_marginBottom="@dimen/margin_vertical_editor_page_community_avatar"
                            android:src="@drawable/img_example_community"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/communityTitle"
                            android:text="@string/you_will_post_in"
                            android:layout_marginTop="@dimen/margin_vertical_editor_page_community_avatar"
                            android:layout_toEndOf="@+id/communityAvatar"
                            android:theme="@style/PostCardAuthorTextStyle"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/communityName"
                            tools:text="Overwatch"
                            android:layout_below="@+id/communityTitle"
                            android:layout_toEndOf="@+id/communityAvatar"
                            android:theme="@style/PostCardCommunityTextStyle"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <EditText
                        android:id="@+id/title"
                        android:background="@color/white"
                        android:hint="@string/title"
                        android:inputType="textFilter"
                        android:layout_marginTop="@dimen/margin_top_editor_page_title"
                        android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                        android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                        android:theme="@style/EditorPostTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/content"
                        android:background="@color/white"
                        android:hint="@string/enter_text"
                        android:inputType="textMultiLine|textCapSentences"
                        android:linksClickable="false"
                        android:layout_marginTop="@dimen/margin_top_editor_page_title"
                        android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                        android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                        android:theme="@style/EditorPostContentTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ProgressBar
                        android:id="@+id/linkPreviewProgress"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical_default_16dp"
                        android:layout_marginBottom="@dimen/margin_vertical_default_16dp"
                        android:indeterminateOnly="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

                <LinearLayout
                        android:id="@+id/linkPreviewLayout"
                        android:layout_marginTop="@dimen/margin_top_editor_page_link_preview"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <im.delight.android.webview.AdvancedWebView
                            android:id="@+id/linkPreviewWebView"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/margin_top_editor_page_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <FrameLayout
                            android:id="@+id/linkPreviewImageViewLayout"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/linkPreviewImageView"
                                android:adjustViewBounds="true"
                                android:maxHeight="@dimen/height_editor_image_preview"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/margin_top_editor_page_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <ImageView
                                android:id="@+id/linkPreviewImageClear"
                                android:layout_gravity="top|end"
                                android:padding="@dimen/margin_horizontal_default_16dp"
                                android:background="?attr/selectableItemBackground"
                                app:srcCompat="@drawable/ic_image_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </FrameLayout>

                    <LinearLayout
                            android:id="@+id/previewDescriptionLayout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/previewSummary"
                                tools:text="Wallpaper Pictures | Download Free Images on Unsplash"
                                android:background="@color/middle_gray_3"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:paddingStart="@dimen/margin_horizontal_default_16dp"
                                android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                                android:paddingTop="@dimen/margin_top_editor_page_summary"
                                android:theme="@style/EditorPreviewSummaryTextStyle"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <View
                                android:background="@color/middle_gray_3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_top_editor_page_provider"/>

                        <TextView
                                android:id="@+id/previewProvider"
                                tools:text="unsplash.com"
                                android:background="@color/middle_gray_3"
                                android:paddingStart="@dimen/margin_horizontal_default_16dp"
                                android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                                android:theme="@style/EditorPreviewProviderTextStyle"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <View
                                android:background="@color/middle_gray_3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_top_editor_page_summary"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/bg_post_comment"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/nsfw"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/padding_vertical_editor_page_buttons"
                android:paddingBottom="@dimen/padding_vertical_editor_page_buttons"
                android:paddingStart="@dimen/margin_horizontal_default_16dp"
                android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                android:layout_gravity="start|center_vertical"
                app:srcCompat="@drawable/ic_nsfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/photo"
                android:layout_toEndOf="@+id/nsfw"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/padding_vertical_editor_page_buttons"
                android:paddingBottom="@dimen/padding_vertical_editor_page_buttons"
                android:paddingStart="@dimen/margin_horizontal_default_16dp"
                android:paddingEnd="@dimen/margin_horizontal_default_16dp"
                android:layout_gravity="start|center_vertical"
                app:srcCompat="@drawable/ic_editor_widget_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_alignParentTop="true"
                android:background="@color/middle_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </RelativeLayout>

</LinearLayout>