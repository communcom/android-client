<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.shared_fragments.editor.view.EditorPageFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        <!--App bar-->
        <com.google.android.material.appbar.AppBarLayout
                app:elevation="0dp"
                android:id="@+id/actionBar"
                android:background="@color/white"
                android:layout_height="@dimen/height_action_bar"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways">

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/close"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"

                    android:scaleX="@dimen/scale_editor_tool_buttons_small"
                    android:scaleY="@dimen/scale_editor_tool_buttons_small"

                    app:imageButton_icon="@drawable/ic_close"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    android:layout_marginStart="@dimen/margin_size_editor_tool_button_side_small"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/toolbarTitle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:text="@string/create_post"
                    style="@style/ToolbarTitleTextStyle"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Community area -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_community_area">

                    <ImageView
                        android:id="@+id/communityAvatar"

                        android:layout_width="@dimen/size_community_icon"
                        android:layout_height="@dimen/size_community_icon"

                        android:layout_marginStart="@dimen/margin_size_editor_common"

                        android:src="@drawable/ic_group_temporary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/communityTitle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_toEndOf="@+id/communityAvatar"

                        android:text="@string/you_will_post_in"
                        style="@style/PostCardAuthorTextStyle"

                        app:layout_constraintBottom_toTopOf="@+id/communityName"
                        app:layout_constraintStart_toEndOf="@+id/communityAvatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside"

                        android:layout_marginStart="@dimen/margin_size_editor_small"
                        android:layout_marginTop="@dimen/vertical_margin_text_community_area"

                        />

                    <TextView
                        android:id="@+id/communityName"

                        style="@style/ToolbarTitleTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="@dimen/vertical_margin_text_community_area"
                        android:layout_marginEnd="@dimen/margin_size_editor_tool_button_side_small"

                        android:ellipsize="end"
                        android:maxLines="1"

                        tools:text="Overwatch Overwatch Overwatch Overwatch Overwatch Overwatch Overwatch"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/showCommunities"

                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/communityTitle"
                        app:layout_constraintTop_toBottomOf="@+id/communityTitle" />

                    <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                        android:id="@+id/showCommunities"

                        android:layout_width="@dimen/size_editor_tool_button"
                        android:layout_height="@dimen/size_editor_tool_button"

                        android:layout_marginEnd="@dimen/margin_size_editor_tool_button_side_small"

                        android:background="@drawable/bcg_editor_tool_button"
                        android:scaleX="@dimen/scale_editor_tool_buttons_small"

                        android:scaleY="@dimen/scale_editor_tool_buttons_small"
                        app:imageButton_icon="@drawable/ic_drop_down"
                        app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"

                        app:imageButton_tint="@color/tint_editor_tool_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintTop_toTopOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Title-->
                <EditText
                    android:id="@+id/title"
                    style="@style/EditorPostTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                    android:layout_marginTop="@dimen/margin_top_editor_page_title"
                    android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"
                    android:background="@color/white"
                    android:hint="@string/title"

                    android:visibility="gone"
                    tools:visibility="visible"

                    android:inputType="textFilter" />

                <io.golos.posts_editor.Editor
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:minHeight="@dimen/min_height_editor"

                    android:layout_marginStart="@dimen/margin_horizontal_default_16dp"
                    android:layout_marginTop="@dimen/margin_top_editor_page_title"
                    android:layout_marginEnd="@dimen/margin_horizontal_default_16dp"

                    android:id="@+id/editorWidget"

                    app:render_type="Editor"
                    app:placeholder="@string/start_writing_here"
                    app:is_simple = "true"
                    app:is_text_styles_supported = "false"
                />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!--Toolbar-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_editor_toolbar"
            android:background="@drawable/bcg_editor_toolbar">

        <Button
            android:id="@+id/nsfwButton"

            android:layout_width="@dimen/size_editor_tool_button"
            android:layout_height="@dimen/size_editor_tool_button"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            style="?android:attr/borderlessButtonStyle"

            android:layout_marginStart="@dimen/margin_size_editor_common"
            android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

            android:background="@drawable/bcg_editor_tool_button_adult"
            android:textColor="@color/tint_editor_tool_button_adult"

            android:text="@string/adult_only"
            android:textSize="@dimen/text_size_13_sp"
            />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginStart="@dimen/margin_size_editor_tool_button"
            android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/postButton"
            app:layout_constraintStart_toEndOf="@+id/nsfwButton"

            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/boldButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_bold"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/italicButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_italic"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/textColorButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_text_color"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/tagButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_tag"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/mentionButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_mention"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/linkInTextButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_link_in_text"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/photoButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_photo"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />

                <io.golos.cyber_android.ui.common.widgets.ImageButtonFixedIconSize
                    android:id="@+id/linkExternalButton"

                    android:layout_width="@dimen/size_editor_tool_button"
                    android:layout_height="@dimen/size_editor_tool_button"

                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/margin_size_editor_tool_button"

                    android:layout_marginEnd="@dimen/margin_size_editor_tool_button"

                    android:background="@drawable/bcg_editor_tool_button"
                    android:visibility="gone"

                    app:imageButton_icon="@drawable/ic_link_external"
                    app:imageButton_iconInscribeSize="@dimen/size_editor_tool_button_icon"
                    app:imageButton_tint="@color/tint_editor_tool_button"

                    tools:visibility="visible" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/postButton"

            android:layout_width="@dimen/width_editor_post_button"
            android:layout_height="@dimen/height_editor_post_button"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            style="?android:attr/borderlessButtonStyle"

            android:layout_marginStart="@dimen/margin_size_editor_tool_button"
            android:layout_marginEnd="@dimen/margin_size_editor_common"

            android:background="@drawable/bcg_editor_post_button"
            android:textColor="@color/tint_editor_post_button"

            android:text="@string/post_button"
            android:textSize="@dimen/text_size_15_sp"
            android:textAllCaps="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>