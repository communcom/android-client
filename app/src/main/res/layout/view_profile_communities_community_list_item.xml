<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/profile_communities_list_item_width"
    android:layout_height="@dimen/profile_communities_list_height"

    android:paddingStart="@dimen/profile_communities_list_item_padding_horizontal"
    android:paddingEnd="@dimen/profile_communities_list_item_padding_horizontal"
    android:paddingTop="@dimen/profile_communities_list_item_padding_vertical"
    android:paddingBottom="@dimen/profile_communities_list_item_padding_vertical">

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:src="@color/blue"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="@dimen/profile_communities_list_item_area_width"
        android:layout_height="@dimen/profile_communities_list_item_area_height"

        android:layout_gravity="center_horizontal|bottom"

        android:background="@drawable/bcg_profile_communities_area"
    />

    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="@dimen/profile_communities_list_item_avatar_size"
        android:layout_height="@dimen/profile_communities_list_item_avatar_size"

        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/profile_communities_list_item_avatar_margin"

        tools:src="@color/green"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/followButton"
        android:layout_width="@dimen/profile_communities_list_item_button_width"
        android:layout_height="@dimen/profile_communities_list_item_button_height"

        android:text="@string/follow"

        style="@style/BlueWhite.RoundCorners.Button"

        android:layout_gravity="center_horizontal|bottom"

        android:layout_marginBottom="@dimen/profile_communities_list_item_button_margin"
        />

    <Button
        android:id="@+id/followingButton"
        android:layout_width="@dimen/profile_communities_list_item_button_width"
        android:layout_height="@dimen/profile_communities_list_item_button_height"

        android:text="@string/following"

        style="@style/GrayBlue.RoundCorners.Button"

        android:layout_gravity="center_horizontal|bottom"

        android:layout_marginBottom="@dimen/profile_communities_list_item_button_margin"

        tools:visibility="visible"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Some name"

        style="@style/Middle.Bold.Title.TextStyle"

        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"

        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/profile_communities_list_item_title_margin"
        />

    <TextView
        android:id="@+id/membersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="12,2k members"

        style="@style/Small.Gray.TextStyle"

        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/profile_communities_list_item_members_margin"
        />
</FrameLayout>