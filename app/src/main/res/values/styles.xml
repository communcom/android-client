<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="StandardText16spStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditorWidgetCaptionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SearchBarTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="SortingWidgetTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SortingWidgetCaptionTextStyle" parent="SortingWidgetTextStyle">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="PostCardCommunityTextStyle" parent="StandardText16spStyle" />

    <style name="PostCardAuthorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="PostCardPreviewTextStyle" parent="StandardText16spStyle" />

    <style name="PostCardCountersTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_12_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SortsTextStyle" parent="StandardText16spStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PostTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PostCardTitleTextStyle" parent="StandardText16spStyle">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PostContentTextStyle" parent="StandardText16spStyle" />

    <style name="PostCommentsTitleTextStyle" parent="PostTitleTextStyle">
        <item name="android:textSize">@dimen/text_size_22_sp</item>
    </style>

    <style name="CommentAuthorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CommentContentTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CommentRatingTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_13_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CommentReplyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_15_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SignUpButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_sign_up_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/buttons_text_size_welcome_slide</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:minHeight">@dimen/height_welcome_sign_button_min</item>
    </style>

    <style name="SignInButtonStyle" parent="SignUpButtonStyle">
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SignInTextLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:background">@color/white</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="WelcomeSlidesTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_welcome_slide</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SignInCaptionTextStyle" parent="WelcomeSlidesTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_34_sp</item>
    </style>

    <style name="SignInBlueCaptionTextStyle" parent="SignInCaptionTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="NotificationDialogMessageTextStyle" parent="StandardText16spStyle">
        <item name="android:textColor">@color/pale_black</item>
    </style>

    <style name="NotificationDialogButtonTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NotificationDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditorPostTitleTextStyle" parent="SearchBarTextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="EditorPostContentTextStyle" parent="StandardText16spStyle">
        <item name="android:autoLink">none</item>
        <item name="android:textColorLink">@color/blue</item>
    </style>

    <style name="EditorPreviewSummaryTextStyle" parent="StandardText16spStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_editor_preview</item>
    </style>

    <style name="EditorPreviewProviderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SmsCodeDigitTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_sms_code</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">@drawable/bg_sms_code_digit</item>
    </style>

    <style name="PinKeypadDigitTextStyle" parent="SmsCodeDigitTextStyle">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">@drawable/bg_pin_digit_text_view</item>
    </style>

    <style name="NotificationBadgeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ProfileAvatarTextStyle">
        <item name="android:textSize">@dimen/text_size_42_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileSmallAvatarTextStyle">
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileUserNameTextStyle">
        <item name="android:textSize">@dimen/text_size_24_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileJoinedTextStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_15_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditBioTextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ProfileFollowersCountTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_17_sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ProfileFollowersTextStyle" parent="ProfileFollowersCountTextStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_13_sp</item>
    </style>

    <style name="ProfileControlTextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ProfileFollowingControlTextStyle" parent="ProfileControlTextStyle">
        <item name="android:textColor">@color/text_color_feed_tabs</item>
    </style>

    <style name="SettingsSectionTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_default_16dp</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_default_16dp</item>
    </style>

    <style name="SettingsOptionTitleTextStyle" parent="StandardText16spStyle" />

    <style name="SettingsLogoutTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SettingsBlackTextStyle" parent="SettingsLogoutTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsSelectedOptionTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ChangeAllPasswordsTextStyle" parent="EditBioTextStyle">
        <item name="android:textSize">@dimen/text_size_17_sp</item>
    </style>

    <style name="DragLabelTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_13_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ProfilePostsEmptyDescriptionTextStyle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_17_sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NumericKeypadButtonStyle" parent="StandardText16spStyle">
        <item name = "android:textSize">@dimen/text_size_pin_keypad</item>
        <item name = "android:background">@drawable/bg_numeric_keypad_digit</item>
    </style>
</resources>
