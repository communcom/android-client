<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonWithHintWidget">
        <attr name="button_with_hint_icon" format="reference" />

        <attr name="button_with_hint_icon_scale" format="float" />

        <attr name="button_with_hint_icon_tint" format="reference" />
        <attr name="button_with_hint_background" format="reference" />

        <attr name="button_with_hint_primary_text" format="string" />
        <attr name="button_with_hint_secondary_text" format="string" />
    </declare-styleable>

    <declare-styleable name="PinDigit">
        <attr name="state_normal" format="boolean" />
        <attr name="state_active" format="boolean" />
        <attr name="state_normal_error" format="boolean" />
        <attr name="state_active_error" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ImageButtonFixedIconSize">
        <attr name="imageButton_icon" format="reference" />

        <attr name="imageButton_iconWidth" format="dimension" />
        <attr name="imageButton_iconHeight" format="dimension" />

        <attr name="imageButton_iconInscribeSize" format="dimension" />

        <attr name="imageButton_tint" format="reference" />
    </declare-styleable>
</resources>