<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android"
          xmlns:drawable_state = "http://schemas.android.com/apk/res-auto">

    <item drawable_state:state_normal="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray" />
            <corners android:radius="@dimen/corners_sign_up_sms_code_digit"/>
        </shape>
    </item>

    <item drawable_state:state_active="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/middle_gray_2" />
            <corners android:radius="@dimen/corners_sign_up_sms_code_digit"/>
        </shape>
    </item>

    <item drawable_state:state_normal_error="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray" />
            <corners android:radius="@dimen/corners_sign_up_sms_code_digit"/>
            <stroke android:color="@color/red" android:width="@dimen/stroke_width_digit_pin_keypad" />

        </shape>
    </item>

    <item drawable_state:state_active_error="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/middle_gray_2" />
            <corners android:radius="@dimen/corners_sign_up_sms_code_digit"/>
            <stroke android:color="@color/red" android:width="@dimen/stroke_width_digit_pin_keypad" />
        </shape>
    </item>
</selector>