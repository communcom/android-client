<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_main"
    android:paddingTop="@dimen/padding_main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@color/lightBackground"
        tools:ignore="ContentDescription"
    />

    <io.golos.posts_editor.components.input.edit_text.CustomEditText
        android:id="@+id/descriptionText"

        style="@style/Description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageView"

        android:layout_marginTop="@dimen/image_description_margin"
        android:paddingLeft="@dimen/padding_main"
        android:paddingRight="@dimen/padding_main"

        android:gravity="center_horizontal"
        android:hint="@string/description_here_optional"
     />

    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_width="@dimen/close_image_size"
        android:layout_height="@dimen/close_image_size"

        android:layout_alignParentEnd="true"

        android:layout_marginEnd="@dimen/close_image_margin"
        android:layout_marginTop="@dimen/close_image_margin"

        android:background="@drawable/bcg_remove_image_button"

        android:src="@drawable/ic_close"
        android:tint="?attr/white" />

        android:visibility="visible" />

</RelativeLayout>